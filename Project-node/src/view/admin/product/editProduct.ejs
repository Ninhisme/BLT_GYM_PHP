<%- include('../inc/header.ejs') -%>


<div class="page-wrapper">
			<div class="page-content">

				<!--breadcrumb-->
				<div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
					<div class="breadcrumb-title pe-3">eCommerce</div>
					<div class="ps-3">
						<nav aria-label="breadcrumb">
							<ol class="breadcrumb mb-0 p-0">
								<li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
								</li>
								<li class="breadcrumb-item active" aria-current="page">Add New Product</li>
							</ol>
						</nav>
					</div>
					<div class="ms-auto">
						<div class="btn-group">
							<button type="button" class="btn btn-primary">Settings</button>
							<button type="button" class="btn btn-primary split-bg-primary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown">	<span class="visually-hidden">Toggle Dropdown</span>
							</button>
							<div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-end">	<a class="dropdown-item" href="javascript:;">Action</a>
								<a class="dropdown-item" href="javascript:;">Another action</a>
								<a class="dropdown-item" href="javascript:;">Something else here</a>
								<div class="dropdown-divider"></div>	<a class="dropdown-item" href="javascript:;">Separated link</a>
							</div>
						</div>
					</div>
				</div>
				<!--end breadcrumb-->

              <div class="card">
				  <div class="card-body p-4">
					  <h5 class="card-title">Edit New Product</h5>
					  <hr/>
                       <div class="form-body mt-4">
					    <div class="row">
						   <div class="col-lg-8">
                           <div class="border border-3 p-4 rounded">
							<form id="post_category" action="/product/updateProduct/<%= item.id %>" enctype="multipart/form-data"  method="post">
								<div class="mb-3">
									<label for="inputProductTitle" class="form-label">Product Title</label>
									<input name="product_title" value="<%= item.product_name %>" type="product_title" class="form-control" id="inputProductTitle" placeholder="Enter product title">
								</div>

								<div class="mb-3">
									<label for="inputProductType" class="form-label">Category</label>
									<select  name="category_op" class="form-select" id="inputProductType">
										<% for(let p of categories) { %>
											<option value="<%=p.id %>"><%=p.category %></option>
										<% } %>
									</select>
								</div>

								<div class="mb-3">
									<label for="inputProductType" class="form-label">Category</label>
									<select name="category_status" class="form-select" id="inputProductType">
											<option value="Active">Active</option>
											<option value="Wait">Wait</option>
									</select>
								</div>

								<div class="mb-3">
									<label for="inputProductTitle" class="form-label">By Producer</label>
									<input value="<%= item.by_producer %>" name="by_product" type="by_product" class="form-control" id="inputProductTitle" placeholder="Enter product title">
								</div>
								<div class="mb-3">
									<label for="inputProductDescription" class="form-label">Description</label>
									<textarea  name="description" class="form-control" id="inputProductDescription" rows="3"><%= item.product_desc %></textarea>
								</div>

								<div class="mb-3">
                                    <label for="" class="form-label">Image Product</label><br>
                                
									<label for="images" class="drop-container">
                                        <img id="preview" style="width: 100%; height: 100%; border: 2px solid rgb(199, 199, 199);
                                        border-radius: 10px 10px;" src="/images/<%= item.product_img %>" alt="">
										
										
									</label>
                                    <br>
                                    <input id="productImg"  name="image" type="file" id="images"  >
								</div>

								<!-- <div class="mb-3">
									<label for="productImg" class="form-label">Ảnh sản phẩm</label>
									<input type="file" class="form-control" id="productImg" name="image">
									<img id="preview" src="/images/<%= item.product_img %>" alt="Preview" style="max-width: 200px; max-height: 200px;">
								</div> -->
						
								</div>
							</div>
							<div class="col-lg-4">
								<div class="border border-3 p-4 rounded">
								<div class="row g-3">
									<div class="col-md-6">
										<label for="inputPrice" class="form-label">Price-Main</label>
										<input value="<%= item.main_price %> " name="price_main" type="text" class="form-control" id="inputPrice" placeholder="00.00">
									</div>
									<div class="col-md-6">
										<label for="inputCompareatprice" class="form-label">Price-Sale</label>
										<input value="<%= item.sale_price %> " name="price_sale" type="price_sale" class="form-control" id="inputCompareatprice" placeholder="00.00">
									</div>
								
									
									<div class="col-12">
										<div class="d-grid">
											<button type="submit" class="btn btn-primary">Save Product</button>
										</div>
									</div>
								</div> 
							</div>
							</div>
							</form>
					   </div>
					</div>
				  </div>
			  </div>

			</div>
		</div>

		<%- include('../inc/footer.ejs') -%>
		
<script type="text/javascript" >
		$(document).ready(function () {
			$('#image-uploadify').imageuploadify();
		})
</script>	


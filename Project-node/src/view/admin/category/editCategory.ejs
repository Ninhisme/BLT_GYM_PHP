<%- include('../inc/header.ejs') -%>
<div class="page-wrapper">
    <div class="page-content">

        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">eCommerce</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item"><a href=""><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Add Category</li>
                    </ol>
                </nav>
            </div>
            
        </div>
        <!--end breadcrumb-->

      <div class="card">
          <div class="card-body p-4">
              <h5 class="card-title">Edit New Category</h5>
              <hr/>
               <div class="form-body mt-4">
                <div class="row">
                   <div class="">
                   <div class="border border-3 p-4 rounded" >
                        <form action="/admin/updateCategory/<%= item.id %>"   method="post">
                            <div class="mb-3">
                                <label  class="form-label">ID Category</label>
                                <input name="id" value="<%= item.id %>" type="text" class="form-control" >
                            </div>

                            <div class="mb-3">
                                <label  class="form-label">Category Title</label>
                                <input name="category_name" value="<%= item.category %>" type="text" class="form-control" >
                            </div>
                              
                             <div class="col-12">
                                <div class="ms-auto">
                                    <button type="submit" class="btn btn-primary">Edit Category</button>
                                 </div>
                            </div> 

                        </form>
                    
                    </div>
                   </div>
                   
                          
                      </div> 
                  </div>
                  </div>
               </div><!--end row-->
            </div>
          </div>
      </div>

    </div>
</div>
<%- include('../inc/footer.ejs') -%>